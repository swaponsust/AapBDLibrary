<?xml version="1.0" encoding="utf-8" ?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/progres" android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center">
<ProgressBar
	    android:id="@+id/prog"
	    android:layout_centerInParent="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate"
		android:layout_margin="5dip"/> 
 <TextView
            android:id="@+id/busytextview"
            android:layout_below="@+id/prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           
            android:text=""
            android:textColor="#000000" />
 
 </RelativeLayout>